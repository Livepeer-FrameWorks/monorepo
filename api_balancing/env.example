# Server Configuration
PORT=18008
FOGHORN_CONTROL_ADDR=:18019
GIN_MODE=debug
LOG_LEVEL=info

# Authentication
SERVICE_TOKEN=your-service-token-here

# Database Configuration
DATABASE_URL=postgres://frameworks_user:frameworks_dev@localhost:5432/frameworks?sslmode=disable

# Event Propagation
DECKLOG_URL=http://decklog:18006
COMMODORE_URL=http://commodore:18001

# Service Discovery
QUARTERMASTER_URL=http://localhost:18002

# Load Balancer Weights
CPU_WEIGHT=500
RAM_WEIGHT=500
BANDWIDTH_WEIGHT=1000
GEO_WEIGHT=1000
STREAM_BONUS=50

# GeoIP Configuration (optional)
# Path to MaxMind GeoLite2 or GeoIP2 MMDB file for fallback geo enrichment
# Used when Cloudflare/proxy geo headers are missing
# If not provided, geo enrichment fallback will be disabled
# GEOIP_MMDB_PATH=/path/to/GeoLite2-City.mmdb

# GeoIP cache configuration (optional)
GEOIP_CACHE_TTL=300s
GEOIP_CACHE_SWR=120s
GEOIP_CACHE_NEG_TTL=60s
GEOIP_CACHE_MAX=50000

# gRPC Security Configuration
# Set to true to enable TLS for gRPC connections (production recommended)
GRPC_USE_TLS=false
# Path to TLS certificate file (required when GRPC_USE_TLS=true)
GRPC_TLS_CERT_PATH=/path/to/cert.pem
# Path to TLS private key file (required when GRPC_USE_TLS=true)  
GRPC_TLS_KEY_PATH=/path/to/key.pem

# Decklog Client Security Configuration
# Set to true to enable TLS for Decklog client connections (production recommended)
DECKLOG_USE_TLS=false

# Commodore cache configuration (optional)
COMMODORE_CACHE_TTL=60s
COMMODORE_CACHE_SWR=30s
COMMODORE_CACHE_NEG_TTL=10s
COMMODORE_CACHE_MAX=10000

# Node Identity (optional, for distributed deployments)
# NODE_ID=foghorn-1
# REGION=us-east-1
# VERSION=latest