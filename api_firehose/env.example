# Required deployment-time config
KAFKA_BROKERS=kafka:9092
KAFKA_CLUSTER_ID=frameworks

# gRPC configuration
GRPC_PORT=18006
TLS_CERT_FILE=/etc/letsencrypt/live/decklog/fullchain.pem
TLS_KEY_FILE=/etc/letsencrypt/live/decklog/privkey.pem
ALLOW_INSECURE=false  # Set to true for local development

# HTTP metrics configuration
METRICS_PORT=18026

# Optional config
LOG_LEVEL=info