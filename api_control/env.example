# Required deployment-time config
DATABASE_URL=postgres://frameworks_user:frameworks_dev@postgres:5432/frameworks?sslmode=disable
JWT_SECRET=your-jwt-secret-change-in-production
SERVICE_TOKEN=your-service-token-here

# Service Integration URLs
PURSER_URL=http://localhost:18003
QUARTERMASTER_URL=http://localhost:18002
QUARTERMASTER_CACHE_TTL=60s
QUARTERMASTER_CACHE_SWR=30s
QUARTERMASTER_CACHE_NEG_TTL=10s
QUARTERMASTER_CACHE_MAX=10000

# Foghorn integration
# Preferred: use Quartermaster service discovery; these variables are a convenience override
# FOGHORN_URLS supports comma-separated list of Foghorn HTTP base URLs (used by /clips)
# FOGHORN_URL is a single-target fallback when only one Foghorn is present
FOGHORN_URLS=http://foghorn:18008
FOGHORN_URL=http://foghorn:18008

# MistServer integration
MIST_USERNAME=test
MIST_PASSWORD=test
MIST_API_USERNAME=test
MIST_API_PASSWORD=test

# Email Configuration (optional, for notifications)
FROM_EMAIL=noreply@frameworks.dev
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application URLs
BASE_URL=http://localhost:3000

# Server Configuration
PORT=18001
GIN_MODE=debug
LOG_LEVEL=info
