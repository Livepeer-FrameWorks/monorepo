{
  "name": "@livepeer-frameworks/streamcrafter-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "description": "StreamCrafter - browser-based streaming with WebCodecs",
  "scripts": {
    "build": "pnpm run build:core && pnpm run build:react && pnpm run build:svelte && pnpm run build:wc",
    "build:core": "pnpm --filter @livepeer-frameworks/streamcrafter-core build",
    "build:react": "pnpm --filter @livepeer-frameworks/streamcrafter-react build",
    "build:svelte": "pnpm --filter @livepeer-frameworks/streamcrafter-svelte build",
    "build:wc": "pnpm --filter @livepeer-frameworks/streamcrafter-wc build",
    "dev": "pnpm exec concurrently \"pnpm run build:core -- --watch\" \"pnpm run playground:dev\"",
    "type-check": "pnpm --filter '@livepeer-frameworks/streamcrafter-*' type-check",
    "lint": "eslint .",
    "check": "pnpm type-check && pnpm lint",
    "test": "pnpm --filter '@livepeer-frameworks/streamcrafter-*' --if-present test",
    "test:coverage": "pnpm --filter '@livepeer-frameworks/streamcrafter-*' --if-present test:coverage",
    "format": "prettier --write 'packages/*/src/**'",
    "playground:dev": "pnpm --filter playground run dev",
    "playground:build": "pnpm --filter playground run build",
    "clean": "rm -rf packages/*/dist packages/*/.svelte-kit"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.55.0"
  },
  "author": "Livepeer FrameWorks",
  "license": "Unlicense"
}
