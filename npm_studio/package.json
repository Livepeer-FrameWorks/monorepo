{
  "name": "@livepeer-frameworks/streamcrafter-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "description": "StreamCrafter - browser-based streaming with WebCodecs",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @livepeer-frameworks/streamcrafter-core build",
    "build:react": "pnpm --filter @livepeer-frameworks/streamcrafter-react build",
    "build:svelte": "pnpm --filter @livepeer-frameworks/streamcrafter-svelte build",
    "dev": "pnpm exec concurrently \"pnpm run build:core -- --watch\" \"pnpm run playground:dev\"",
    "type-check": "pnpm -r type-check",
    "lint": "eslint .",
    "check": "pnpm type-check && pnpm lint",
    "playground:dev": "pnpm --filter playground run dev",
    "playground:build": "pnpm --filter playground run build",
    "clean": "rm -rf packages/*/dist packages/*/.svelte-kit"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-svelte": "^3.8.0",
    "globals": "^16.2.0",
    "svelte-eslint-parser": "^0.43.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.22.0"
  },
  "author": "Livepeer FrameWorks",
  "license": "Unlicense"
}
