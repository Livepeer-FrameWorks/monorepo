{
  "name": "@livepeer-frameworks/streamcrafter-react",
  "version": "0.1.1",
  "type": "module",
  "description": "React hooks for StreamCrafter browser streaming",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./streamcrafter.css": "./src/streamcrafter.css"
  },
  "scripts": {
    "build": "pnpm run build:types && NODE_ENV=production rollup -c",
    "build:watch": "NODE_ENV=development rollup -c --watch",
    "build:types": "tsc --noEmit false --emitDeclarationOnly --outDir dist/types",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@livepeer-frameworks/streamcrafter-core": "workspace:*",
    "@radix-ui/react-context-menu": "^2.2.6",
    "lucide-react": "^0.563.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.1.7",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "rollup": "^4.57.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "jsdom": "^28.0.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "react",
    "streaming",
    "webcodecs",
    "whip",
    "webrtc",
    "ingest"
  ],
  "author": "Livepeer FrameWorks",
  "license": "Unlicense"
}
