# Bridge (GraphQL API Gateway) Environment Configuration
# Copy this file to .env for local development

# Service Configuration
BRIDGE_PORT=18000
LOG_LEVEL=info
GIN_MODE=debug

# GraphQL Configuration
GRAPHQL_PLAYGROUND_ENABLED=true
GRAPHQL_COMPLEXITY_LIMIT=200

# Internal Service URLs (use localhost for local development)
COMMODORE_URL=http://localhost:18001
QUARTERMASTER_URL=http://localhost:18002
PERISCOPE_QUERY_URL=http://localhost:18004
PURSER_URL=http://localhost:18003
SIGNALMAN_WS_URL=ws://localhost:18009

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
SERVICE_TOKEN=your-service-token-change-in-production

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# Optional: Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s