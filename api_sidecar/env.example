# Required deployment-time config
FOGHORN_URL=http://foghorn:18008
FOGHORN_CONTROL_ADDR=foghorn:18019
SERVICE_TOKEN=your-service-token-here

# Service Discovery
QUARTERMASTER_URL=http://localhost:18002

# Service Integration URLs
COMMODORE_URL=http://localhost:18001

# MistServer integration
MISTSERVER_URL=http://mistserver:4242
MIST_PASSWORD=koekjes
MIST_API_USERNAME=test
MIST_API_PASSWORD=test

# Helmsman webhook base for Mist triggers
HELMSMAN_WEBHOOK_URL=http://helmsman:18007

# Node identity
CLUSTER_ID=default-cluster
NODE_NAME=edge-node-1

# Node capabilities (comma-separated roles and individual flags)
HELMSMAN_ROLES=ingest,edge,storage,processing
HELMSMAN_CAP_INGEST=true
HELMSMAN_CAP_EDGE=true
HELMSMAN_CAP_STORAGE=true
HELMSMAN_CAP_PROCESSING=true

# Public hostname for published viewer URLs (optional)
EDGE_PUBLIC_HOSTNAME=localhost

# GPU/accelerator summary (optional)
HELMSMAN_GPU_VENDOR=NVIDIA
HELMSMAN_GPU_MODEL=L4
HELMSMAN_GPU_MEM_MB=24576
HELMSMAN_GPU_CC=8.9

# Storage configuration and limits (optional)
HELMSMAN_STORAGE_LOCAL_PATH=/var/lib/frameworks/storage
HELMSMAN_STORAGE_S3_BUCKET=frameworks-dev
HELMSMAN_STORAGE_S3_PREFIX=tenant/$TENANT/internal/$INTERNAL/
HELMSMAN_MAX_TRANSCODES=8
HELMSMAN_STORAGE_CAPACITY_BYTES=107374182400

# Foghorn HTTP base used in Mist stream source (balance:<base>)
FOGHORN_HTTP_BASE=http://foghorn:18008

# Server Configuration
PORT=18007
GIN_MODE=debug
LOG_LEVEL=info

# GeoIP Configuration (optional)
# Path to MaxMind GeoLite2 or GeoIP2 MMDB file for geo enrichment
# If not provided, geo enrichment will be skipped and NULL values used
# GEOIP_MMDB_PATH=/path/to/GeoLite2-City.mmdb