# Local Development Environment Variables
# Copy this file to .env to run 'npm run dev' locally

# The full URL where the docs site will be served
# For local development with 'npm run dev', this is usually just the subpath
PUBLIC_DOCS_URL=http://localhost:18090/docs

# URL for the main Web Application (Dashboard)
# In local dev, this points to the proxy or the direct port
WEBAPP_PUBLIC_URL=http://localhost:18090/app

# URL for the Marketing Website
MARKETING_PUBLIC_URL=http://localhost:18090

# Base URL for the API Gateway (no endpoint path)
GATEWAY_PUBLIC_URL=http://localhost:18090

# Streaming Configuration - Base URLs (docs derive hostname and TLS mode from scheme)
# For production: use https:// URLs (e.g., https://ingest.frameworks.network)
STREAMING_INGEST_URL=http://localhost:8080
STREAMING_EDGE_URL=http://localhost:8080

# Protocol-specific ports (RTMP and SRT need explicit ports)
STREAMING_RTMP_PORT=1935
STREAMING_SRT_PORT=8889

# Streaming paths
STREAMING_RTMP_PATH=/live
STREAMING_HLS_PATH=/hls
STREAMING_WEBRTC_PATH=/webrtc

# Community Links
DISCORD_URL=https://discord.gg/9J6haUjdAq
GITHUB_URL=https://github.com/livepeer-frameworks/monorepo
