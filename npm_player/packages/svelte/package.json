{
  "name": "@livepeer-frameworks/player-svelte",
  "version": "0.1.3",
  "type": "module",
  "description": "Svelte 5 components for FrameWorks streaming player",
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./player.css": "./src/player.css"
  },
  "scripts": {
    "build": "svelte-package -i src -o dist",
    "build:watch": "svelte-package -i src -o dist --watch",
    "type-check": "svelte-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@livepeer-frameworks/player-core": "workspace:*",
    "bits-ui": "^2.15.5"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/svelte": "^5.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "svelte": "^5.51.2",
    "svelte-check": "^4.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "streaming",
    "player",
    "video"
  ],
  "author": "Livepeer FrameWorks",
  "license": "Unlicense"
}
