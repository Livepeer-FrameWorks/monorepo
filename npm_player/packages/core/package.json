{
  "name": "@livepeer-frameworks/player-core",
  "version": "0.1.5",
  "type": "module",
  "description": "Core player logic for FrameWorks streaming - framework agnostic",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "style": "dist/player.css",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./vanilla": {
      "source": "./src/vanilla/index.ts",
      "types": "./dist/types/vanilla/index.d.ts",
      "import": "./dist/esm/vanilla.js",
      "require": "./dist/cjs/vanilla.js"
    },
    "./player.css": {
      "source": "./src/styles/player.css",
      "default": "./dist/player.css"
    },
    "./styles.css": {
      "source": "./src/styles/player.css",
      "default": "./dist/player.css"
    }
  },
  "scripts": {
    "build": "pnpm run build:css && pnpm run build:types && NODE_ENV=production rollup -c",
    "build:watch": "NODE_ENV=development rollup -c --watch",
    "build:css": "mkdir -p ./dist && cp ./src/styles/player.css ./dist/player.css",
    "build:types": "tsc --noEmit false --emitDeclarationOnly --outDir dist/types",
    "type-check": "tsc --noEmit",
    "test": "vitest run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "test:coverage": "vitest run -c vitest.config.ts --coverage",
    "test:mutation": "stryker run"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.1"
  },
  "peerDependencies": {
    "dashjs": "^4.0.0 || ^5.0.0",
    "hls.js": "^1.0.0",
    "video.js": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "dashjs": {
      "optional": true
    },
    "hls.js": {
      "optional": true
    },
    "video.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@rollup/plugin-url": "^8.0.2",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-prefix-selector": "^2.1.1",
    "rollup": "^4.57.1",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "streaming",
    "mistserver",
    "webrtc",
    "player",
    "hls",
    "dash"
  ],
  "author": "Livepeer FrameWorks",
  "license": "Unlicense"
}
