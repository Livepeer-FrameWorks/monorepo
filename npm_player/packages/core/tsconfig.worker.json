{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "WebWorker", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/players/WebCodecsPlayer/worker/decoder.worker.ts",
    "src/players/WebCodecsPlayer/worker/types.ts",
    "src/players/WebCodecsPlayer/types.ts",
    "src/wasm/WasmVideoDecoder.ts",
    "src/rendering/WebGLRenderer.ts",
    "src/types.ts"
  ]
}
